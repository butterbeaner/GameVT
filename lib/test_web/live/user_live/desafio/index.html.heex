
<Layouts.flash_group flash={@flash} />
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Responsabilidad Social</title>
</head>
<body>


  <div id="div" phx-hook="LocalStorageCheker">
      <section class="relative py-12 lg:py-24 overflow-hidden">
        <div class="container mx-auto px-4 relative">
          <div class="max-w-2xl mx-auto text-center mb-20">
            <h1 class="font-heading text-5xl sm:text-6xl tracking-xs mb-6"><%= Enum.at(String.split(@task.desafio, ":"), 0)%></h1>
            <p class="text-lg dark:text-black-400 text-gray-500"><%= Enum.at(String.split(@task.desafio, ":"), 1)%> </p>
          </div>
          
          <div class="max-w-2xl mx-auto text-center mb-20">
            <h2 class="font-heading text-5xl sm:text-4xl tracking-xs">Valores</h2>
          </div>
          <div class="flex flex-wrap -mx-4 mb-24">
            <div class="w-full lg:w-1/3 px-4 mb-8 lg:mb-0">
              <div class="relative pt-14 pb-8 px-8 bg-lime-800 dark:bg-red-200 rounded-2xl overflow-hidden">
                <div class="absolute dark:text-black-400 top-0 left-0 h-1 w-full bg-gray-950"></div><span class="block text-2xl font-medium mb-6"><%= Enum.at((Enum.at(@task.valores, 0) || "") |> String.split(":") ,0)%></span>
                <p class="text-lg dark:text-black-400 mb-8 "><%= Enum.at((Enum.at(@task.valores, 0) || "") |> String.split(":") ,1)%></p>
              </div>
            </div>
            <div class="w-full lg:w-1/3 px-4 mb-8 lg:mb-0">
              <div class="relative pt-14 pb-8 px-8 bg-lime-800 rounded-2xl overflow-hidden">
                <div class="absolute top-0 left-0 h-1 w-full bg-gray-950"></div><span class="block text-2xl font-medium mb-6"><%= Enum.at((Enum.at(@task.valores, 1) || "") |> String.split(":") ,0)%></span>
                <p class="text-lg mb-8"><%= Enum.at((Enum.at(@task.valores, 1) || "") |> String.split(":") ,1)%></p>
              </div>
            </div>
            <div class="w-full lg:w-1/3 px-4 mb-8 lg:mb-0">
              <div class="relative pt-14 pb-8 px-8 bg-lime-800 rounded-2xl overflow-hidden">
                <div class="absolute top-0 left-0 h-1 w-full bg-gray-950"></div><span class="block text-2xl font-medium mb-6"><%= Enum.at((Enum.at(@task.valores, 2) || "") |> String.split(":") ,0)%></span>
                <p class="text-lg mb-8"><%= Enum.at((Enum.at(@task.valores, 2) || "") |> String.split(":") ,1)%></p>
              </div>
            </div>
          </div>
          <div class="max-w-2xl mx-auto text-center mb-20">
            <h2 class="font-heading text-5xl sm:text-4xl tracking-xs">Disvalores</h2>
          </div>
          <div class="flex flex-wrap -mx-4 mb-24">
            <div class="w-full lg:w-1/3 px-4 mb-8 lg:mb-0">
              <div class="relative pt-14 pb-8 px-8 bg-lime-800  rounded-2xl overflow-hidden">
                <div class="absolute top-0 left-0 h-1 w-full bg-gray-950"></div><span class="block text-2xl font-medium mb-6"><%= Enum.at((Enum.at(@task.novalores, 0) || "") |> String.split(":") ,0)%></span>
                <p class="text-lg mb-8"><%= Enum.at((Enum.at(@task.novalores, 0) || "") |> String.split(":") ,1)%></p>
              </div>
            </div>
            <div class="w-full lg:w-1/3 px-4 mb-8 lg:mb-0">
              <div class="relative pt-14 pb-8 px-8 bg-lime-800  rounded-2xl overflow-hidden">
                <div class="absolute top-0 left-0 h-1 w-full bg-gray-950"></div><span class="block text-2xl font-medium mb-6"><%= Enum.at((Enum.at(@task.novalores, 1) || "") |> String.split(":") ,0)%></span>
                <p class="text-lg mb-8"><%= Enum.at((Enum.at(@task.novalores, 1) || "") |> String.split(":") ,1)%></p>
              </div>
            </div>
            <div class="w-full lg:w-1/3 px-4 mb-8 lg:mb-0">
              <div class="relative pt-14 pb-8 px-8 bg-lime-800 rounded-2xl overflow-hidden">
                <div class="absolute top-0 left-0 h-1 w-full bg-gray-950"></div><span class="block text-2xl font-medium mb-6"><%= Enum.at((Enum.at(@task.novalores, 2) || "") |> String.split(":") ,0)%></span>
                <p class="text-lg mb-8"><%= Enum.at((Enum.at(@task.novalores, 2) || "") |> String.split(":") ,1)%></p>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>

</body>


</html>
